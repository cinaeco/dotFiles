{
  "default_module": "powerline.segments.common",
  "segment_data": {
    "uptime": {
      "before": "⇑  "
    },
    "external_ip": {
      "before": "ⓦ  "
    },
    "email_imap_alert": {
      "before": "✉ ",
      "args": {
        "username": "",
        "password": ""
      }
    }
  },
  "segments": {
    "left" : [
      {
        "name": "hostname",
        "args": {
          "exclude_domain": true
        }
      },
      {
        "name": "external_ip",
        "priority": 50
      }
    ],
    "right": [
      {
        "name": "date",
        "args": {
          "format": "%H:%M %e/%m/%Y",
          "istime": true
        }
      }
    ]
  }
}
