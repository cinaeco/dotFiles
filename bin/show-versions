#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# Display a list of software versions dotfiles is interested in.

echo 'Installed:'

version_commands=( \
  'git version' \
  'bash --version' \
  'zsh --version' \
  'tmux -V' \
  'vim --version' \
  'nvim -v' \
  'ag --version' \
  'pandoc -v' \
  'pandoc-citeproc -V' \
  'tmuxinator version' \
  )

for ver_com in ${version_commands[@]}; do
  com=${ver_com%% *}
  if [[ -n $(command -v $com) ]]; then
    eval "$ver_com" | head -n 1
  else
    echo "$com - none"
  fi
done
